<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".calculadora"
    tools:showIn="@layout/activity_calculadora">

    <Button
        android:id="@+id/botonFT"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/round_title_black_48dp"
        android:text="Cambiar fuente del sistema"
        android:textColor="#000000"
        tools:layout_editor_absoluteY="134dp" />

    <Button
        android:id="@+id/botonBG"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/round_image_black_48dp"
        android:text="Cambiar fondo de pantalla"
        android:textColor="#000000"
        tools:layout_editor_absoluteY="75dp" />

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/iboton_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_arrow_back_black_48" />

</androidx.constraintlayout.widget.ConstraintLayout>