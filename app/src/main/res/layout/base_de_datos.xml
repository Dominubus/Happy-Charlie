<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"><![CDATA[
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent">

        ]]>

        <TextView
            android:id="@+id/textBaseDeDatos"
            android:text="@string/base_de_datos"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:background="#00BCD4"
            android:textSize="30sp"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textBDescogerMe"
            tools:text="coloca un nÃºmero" />
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/base_de_datos"
        app:layout_constraintBottom_toTopOf="@+id/butMostrarMe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintVertical_bias="0.421"

        <EditText
            android:id="@+id/etCodigoMe"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:hint="ingresa un nro. del 1 al 116"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBaseDeDatos" />

        <EditText
            android:id="@+id/etMensajeMe"
            android:layout_width="305dp"
            android:layout_height="212dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/butMostrarMe"
            app:layout_constraintVertical_bias="0.479" />

        <Button
            android:id="@+id/butMostrarMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="124dp"
            android:onClick="MostrarMensaje"
            android:text="Mostrar  Mensaje"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/butGuardarMe"
            app:layout_constraintTop_toBottomOf="@+id/etCodigoMe" />


</androidx.constraintlayout.widget.ConstraintLayout>